<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModels="clr-namespace:Ray_Tracing_Application.ViewModels"
        xmlns:ProjectProperties="clr-namespace:Ray_Tracing_Application.Properties"
        x:Class="Ray_Tracing_Application.Views.MainWindow"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <ViewModels:WPFBitmapConverter x:Key="ImageConverter" />
        <ViewModels:RenderViewModel x:Key="RenderViewModel" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="307*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="10">
            <Grid.DataContext>
                <ViewModels:RenderViewModel/>
            </Grid.DataContext>
            <Image x:Name="RenderImage" Margin="10">
                <Image.Source>
                    <Binding Source="{x:Static ViewModels:RenderViewModel.renderImage}"
                         Converter="{StaticResource ImageConverter}" />
                </Image.Source>
            </Image>
        </Grid>
    </Grid>
</Window>
